---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";
import BlogLogo from "./BlogLogo.astro";
import IconRss from "@/assets/icons/IconRss.svg";
import Socials from "./Socials.astro";
import { SOCIALS } from "@/constants";
import { getTranslations } from "@/i18n/utils";
const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};

const locale = Astro.currentLocale;
---

<header
  class="sticky w-full top-0 z-50 bg-background/50 backdrop-blur-lg select-none hover:bg-background"
>
  <button
    id="index-menu-btn"
    class="absolute top-3 right-3 py-3 self-end sm:hidden sm:top-auto"
    aria-label="Open Menu"
    aria-expanded="false"
    aria-controls="index-menu-items"
  >
    <IconX id="index-close-icon" class="hidden" />
    <IconMenuDeep id="index-menu-icon" />
  </button>
  <section
    id="hero"
    class:list={["py-4 sm:pt-8 sm:pb-10", "app-layout border-b border-border"]}
  >
    <div class="flex items-end justify-start gap-x-2 sm:gap-x-4">
      <div>
        <BlogLogo className="h-16 sm:h-24" />
        <span class="sr-only">對岸茶館</span>
      </div>
      <div class="flex flex-col items-start justify-end text-nowrap">
        <div class="mb-1 text-xs leading-none sm:mb-1.5 sm:text-base">
          Li Yan's Blog
        </div>
        <div
          class="mt-0 mb-3 p-0 text-lg leading-none font-bold sm:mb-5.5 sm:text-2xl"
        >
          Cyber Teahouse
        </div>
        <a
          target="_blank"
          href="/rss.xml"
          class="inline-block"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss
            width={20}
            height={20}
            class="size-3.5 stroke-foreground/70 dark:stroke-foreground/60 stroke-2 sm:size-5 rtl:-rotate-90"
          />
          <span class="sr-only">RSS Feed</span>
        </a>
      </div>
    </div>
    {
      false && SOCIALS.length > 0 && (
        <div class="mt-4 flex max-sm:flex-col sm:items-center">
          <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">{getTranslations(locale, "Social Links")}:</div>
          <Socials />
        </div>
      )
    }
  </section>

  <header
    class="flex flex-col items-center justify-between bg-background select-none sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class:list={[
        "app-layout p-0 sm:py-4",
        "sm:border-b sm:border-border",
        "relative w-full",
        "flex items-baseline justify-center sm:items-center",
      ]}
    >
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:flex-row sm:justify-center sm:space-x-4 sm:py-0"
      >
        <ul
          id="index-menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
              {getTranslations(locale, "About")}
            </a>
          </li>
          <li class="col-span-2">
            <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
              {getTranslations(locale, "Posts")}
            </a>
          </li>
          <li class="col-span-2">
            <a href="/tags" class:list={{ "active-nav": isActive("/tags") }}>
              {getTranslations(locale, "Tags")}
            </a>
          </li>
          {
            SITE.showArchives && (
            <li class="col-span-2">
              <a href="/archives" class:list={{ "active-nav": isActive("/archives") }}>
                {getTranslations(locale, "Archives")}
              </a>
            </li>
            )
          }
          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href="/search"
              class:list={[
                "focus-outline flex p-3 sm:p-1",
                { "[&>svg]:stroke-accent": isActive("/search") },
              ]}
              title={getTranslations(locale, "Search")}
              aria-label="search"
            >
              <IconSearch />
              <span class="sr-only">{getTranslations(locale, "Search")}</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                  title={getTranslations(locale, "Toggles light & dark")}
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </header>
</header>

<script>
  function toggleIndexNav() {
    const menuBtn = document.querySelector("#index-menu-btn");
    const menuItems = document.querySelector("#index-menu-items");
    const menuIcon = document.querySelector("#index-menu-icon");
    const closeIcon = document.querySelector("#index-close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleIndexNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleIndexNav);
</script>
